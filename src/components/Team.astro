<style>
  .team-categories {
    margin-bottom: var(--space-16);
  }

  .category {
    margin-bottom: var(--space-16);
  }

  .category-title {
    font-size: 2rem;
    margin-bottom: var(--space-8);
    color: var(--primary);
    text-align: center;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-6);
  }

  .member-card {
    background: var(--bg-secondary);
    border: 1px solid rgba(180, 180, 199, 0.1);
    border-radius: 16px;
    padding: var(--space-6);
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
  }

  .member-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary);
  }

  .member-card.compact {
    padding: var(--space-4);
  }

  .member-avatar {
    position: relative;
    width: 120px;
    height: 120px;
    margin: 0 auto var(--space-4);
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid var(--primary);
    box-shadow: var(--shadow-md);
  }

  .member-avatar.small {
    width: 80px;
    height: 80px;
  }

  .member-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .member-status {
    position: absolute;
    bottom: 8px;
    right: 8px;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    border: 2px solid var(--bg-secondary);
  }

  .member-status.online {
    background: var(--accent);
  }

  .member-status.away {
    background: #f59e0b;
  }

  .member-info h4 {
    font-size: 1.25rem;
    margin-bottom: var(--space-2);
    color: var(--text-primary);
  }

  .member-role {
    color: var(--primary);
    font-weight: 600;
    margin-bottom: var(--space-3);
    text-transform: uppercase;
    font-size: 0.875rem;
    letter-spacing: 0.05em;
  }

  .member-bio {
    color: var(--text-secondary);
    margin-bottom: var(--space-4);
    line-height: 1.5;
  }

  .member-social {
    display: flex;
    justify-content: center;
    gap: var(--space-3);
  }

  .social-link {
    color: var(--text-muted);
    transition: all 0.2s ease;
    padding: var(--space-2);
    border-radius: 8px;
  }

  .social-link:hover {
    color: var(--primary);
    background: rgba(0, 212, 255, 0.1);
    transform: translateY(-2px);
  }

  .join-team {
    text-align: center;
    padding: var(--space-12);
    background: var(--gradient-primary);
    border-radius: 20px;
    color: white;
  }

  .join-team h3 {
    font-size: 2rem;
    margin-bottom: var(--space-4);
    color: white;
  }

  .join-team p {
    font-size: 1.125rem;
    margin-bottom: var(--space-6);
    color: rgba(255, 255, 255, 0.9);
  }

  .join-team .btn {
    background: white;
    color: var(--primary);
    border: none;
  }

  .join-team .btn:hover {
    background: rgba(255, 255, 255, 0.9);
    color: var(--primary);
  }

  @media (max-width: 768px) {
    .team-grid {
      grid-template-columns: 1fr;
    }

    .member-card {
      padding: var(--space-4);
    }

    .join-team {
      padding: var(--space-8);
    }

    .join-team h3 {
      font-size: 1.5rem;
    }
  }
</style>
