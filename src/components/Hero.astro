    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">
          Welcome to
          <span class="title-highlight">CyberCell</span>
          <span class="title-accent">BCET</span>
        </h1>
        <p class="hero-subtitle">
          Empowering the next generation of cybersecurity professionals through
          innovation, hands-on learning, and collaborative excellence.
        </p>
        <div class="hero-stats">
          <div class="stat">
            <span class="stat-number">50+</span>
            <span class="stat-label">Members</span>
          </div>
          <div class="stat">
            <span class="stat-number">70+</span>
            <span class="stat-label">Events</span>
          </div>
          <div class="stat">
            <span class="stat-number">500+</span>
            <span class="stat-label">Participants</span>
          </div>
        </div>
        <div class="hero-actions">
          <a href="#about" class="btn btn-primary">Explore More</a>
          <a href="#contact" class="btn btn-secondary">Join Us</a>
        </div>
      </div>
      <div class="hero-visual">
        <div class="visual-container">
          <div class="code-block">
            <div class="code-header">
              <div class="code-dots">
                <span class="dot red"></span>
                <span class="dot yellow"></span>
                <span class="dot green"></span>
              </div>
              <span class="code-title">cybersecurity.py</span>
            </div>
            <div class="code-content">
              <div class="code-line">
                <span class="code-keyword">import</span>
                <span class="code-module">security</span>
              </div>
              <div class="code-line">
                <span class="code-keyword">from</span>
                <span class="code-module">cybercell</span>
                <span class="code-keyword">import</span>
                <span class="code-function">innovation</span>
              </div>
              <div class="code-line"></div>
              <div class="code-line">
                <span class="code-keyword">def</span>
                <span class="code-function">secure_future</span>():
              </div>
              <div class="code-line code-indent">
                <span class="code-keyword">return</span>
                <span class="code-string">"Building tomorrow's defenders"</span>
              </div>
            </div>
          </div>
