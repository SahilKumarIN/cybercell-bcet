---
import events from "../data/events.json";
---

<section id="events" class="section">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Events & Activities</h2>
      <p class="section-subtitle">
        Engaging workshops, competitions, and learning opportunities throughout
        the year
      </p>
    </div>

    <div class="events-grid">
      {
        events.map((event) => (
          <div class={event.isFeatured ? "event-card featured" : "event-card"}>
            {event.isFeatured && <div class="event-badge">Featured</div>}
            <div class="event-date">
              <span class="month">{event.month}</span>
              <span class="day">{event.date}</span>
            </div>
            <div class="event-content">
              <h3>{event.name}</h3>
              <p>{event.description}</p>
              <div class="event-tags">
                {event.eventTags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
            {event.isUpcoming && (
              <div class="event-cta">
                <a href={event.link} class="btn btn-primary">
                  Register Now
                </a>

                <a href={event.eventDescLink} class="btn btn-secondary">
                  Know More
                </a>
              </div>
            )}
          </div>
        ))
      }
    </div>

    <div class="events-cta">
      <p>Want to stay updated with all our events?</p>
      <button class="btn btn-secondary">Subscribe to Newsletter</button>
    </div>
  </div>
</section>

<style>
  .events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-6);
    margin-bottom: var(--space-16);
  }

  .event-card {
    background: var(--bg-secondary);
    border: 1px solid rgba(180, 180, 199, 0.1);
    border-radius: 16px;
    padding: var(--space-6);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .event-card.featured {
    border: 2px solid var(--primary);
    box-shadow: var(--shadow-glow);
  }

  .event-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary);
  }

  .event-badge {
    position: absolute;
    top: 0;
    right: 0;
    background: var(--gradient-primary);
    color: white;
    padding: var(--space-2) var(--space-4);
    border-bottom-left-radius: 12px;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .event-date {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: var(--gradient-accent);
    border-radius: 12px;
    margin-bottom: var(--space-6);
    color: var(--bg-primary);
    font-weight: 700;
  }

  .month {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .day {
    font-size: 1.5rem;
    line-height: 1;
  }

  .event-content h3 {
    font-size: 1.5rem;
    margin-bottom: var(--space-3);
    color: var(--text-primary);
  }

  .event-content p {
    color: var(--text-secondary);
    margin-bottom: var(--space-4);
    line-height: 1.6;
  }

  .event-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-bottom: var(--space-6);
  }

  .tag {
    background: rgba(0, 212, 255, 0.1);
    color: var(--primary);
    padding: var(--space-1) var(--space-3);
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 1px solid rgba(0, 212, 255, 0.2);
  }

  .event-cta {
    margin-top: auto;
  }

  .events-cta {
    text-align: center;
    padding: var(--space-12);
    background: var(--bg-secondary);
    border-radius: 16px;
    border: 1px solid rgba(0, 212, 255, 0.1);
  }

  .events-cta p {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: var(--space-6);
  }

  @media (max-width: 768px) {
    .events-grid {
      grid-template-columns: 1fr;
    }

    .event-card {
      padding: var(--space-4);
    }

    .events-cta {
      padding: var(--space-8);
    }
  }
</style>
