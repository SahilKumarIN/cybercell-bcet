<style>
  .footer {
    background: var(--bg-secondary);
    border-top: 1px solid rgba(0, 212, 255, 0.1);
    padding: var(--space-20) 0 var(--space-8);
    margin-top: var(--space-20);
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--space-16);
    margin-bottom: var(--space-16);
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }

  .footer-logo h3 {
    font-size: 1.5rem;
    margin: 0;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .brand-accent {
    color: var(--accent);
  }

  .tagline {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin: 0;
    font-style: italic;
  }

  .footer-description {
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-6);
    max-width: 400px;
  }

  .footer-social {
    display: flex;
    gap: var(--space-4);
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(0, 212, 255, 0.1);
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: 8px;
    color: var(--primary);
    transition: all 0.2s ease;
  }

  .social-icon:hover {
    background: var(--primary);
    color: var(--bg-primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-8);
  }

  .link-group h4 {
    font-size: 1.125rem;
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }

  .link-group ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .link-group a {
    color: var(--text-secondary);
    font-size: 0.95rem;
    transition: color 0.2s ease;
  }

  .link-group a:hover {
    color: var(--primary);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--space-8);
    border-top: 1px solid rgba(180, 180, 199, 0.1);
    flex-wrap: wrap;
    gap: var(--space-4);
  }

  .copyright p {
    color: var(--text-muted);
    font-size: 0.875rem;
  }

  .footer-bottom-links {
    display: flex;
    gap: var(--space-6);
  }

  .footer-bottom-links a {
    color: var(--text-muted);
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .footer-bottom-links a:hover {
    color: var(--primary);
  }

  @media (max-width: 768px) {
    .footer {
      padding: var(--space-16) 0 var(--space-6);
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: var(--space-12);
    }

    .footer-links {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-6);
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
      gap: var(--space-4);
    }

    .footer-bottom-links {
      flex-wrap: wrap;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .footer-links {
      grid-template-columns: 1fr;
    }
  }
</style>
