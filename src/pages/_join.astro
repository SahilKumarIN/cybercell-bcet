<script>
  document.addEventListener('DOMContentLoaded', () => {
    const applicationForm = document.getElementById('applicationForm');
    const membershipButtons = document.querySelectorAll('.membership-btn');
    
    // Handle membership type selection
    membershipButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        const membershipType = btn.closest('.membership-card').querySelector('h3').textContent.toLowerCase();
        const membershipSelect = document.getElementById('membershipType');
        
        if (membershipType.includes('regular')) {
          membershipSelect.value = 'regular';
        } else if (membershipType.includes('core')) {
          membershipSelect.value = 'core';
        } else if (membershipType.includes('alumni')) {
          membershipSelect.value = 'alumni';
        }
        
        // Scroll to application form
        document.querySelector('.application-section').scrollIntoView({ 
          behavior: 'smooth' 
        });
      });
    });
    
    // Handle form submission
    applicationForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const submitBtn = applicationForm.querySelector('.form-submit');
      const btnText = submitBtn.querySelector('.btn-text');
      const btnLoading = submitBtn.querySelector('.btn-loading');
      
      // Validate interests
      const interests = applicationForm.querySelectorAll('input[name="interests"]:checked');
      if (interests.length === 0) {
        alert('Please select at least one area of interest.');
        return;
      }
      
      // Show loading state
      btnText.style.display = 'none';
      btnLoading.style.display = 'block';
      submitBtn.disabled = true;
      
      // Simulate form submission
      await new Promise(resolve => setTimeout(resolve, 3000));
      
      // Show success message
      alert('Thank you for your application! We\'ll review it and get back to you within 48 hours.');
      
      // Reset form
      applicationForm.reset();
      
      // Reset button state
      btnText.style.display = 'block';
      btnLoading.style.display = 'none';
      submitBtn.disabled = false;
    });
  });
</script>