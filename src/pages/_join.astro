---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Join Us - CyberCell BCET" description="Join CyberCell BCET and become part of our cybersecurity community. Learn about membership benefits, requirements, and application process.">
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title">Join CyberCell BCET</h1>
          <p class="hero-subtitle">
            Become part of our vibrant cybersecurity community and shape your future in digital security
          </p>
          <div class="hero-stats">
            <div class="stat">
              <span class="stat-number">500+</span>
              <span class="stat-label">Active Members</span>
            </div>
            <div class="stat">
              <span class="stat-number">50+</span>
              <span class="stat-label">Events Annually</span>
            </div>
            <div class="stat">
              <span class="stat-number">15+</span>
              <span class="stat-label">Research Projects</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Membership Benefits -->
    <section class="section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">Why Join CyberCell BCET?</h2>
          <p class="section-subtitle">
            Discover the benefits of being part of our cybersecurity community
          </p>
        </div>
        
        <div class="benefits-grid">
          <div class="benefit-card card">
            <div class="benefit-icon">üéì</div>
            <h3>Learn & Grow</h3>
            <p>Access to comprehensive cybersecurity training, workshops, and certification guidance from industry experts.</p>
            <ul class="benefit-features">
              <li>Hands-on workshops</li>
              <li>Certification guidance</li>
              <li>Mentorship programs</li>
              <li>Technical training</li>
            </ul>
          </div>
          
          <div class="benefit-card card">
            <div class="benefit-icon">ü§ù</div>
            <h3>Network & Connect</h3>
            <p>Build valuable connections with peers, industry professionals, and cybersecurity experts worldwide.</p>
            <ul class="benefit-features">
              <li>Industry networking</li>
              <li>Peer collaboration</li>
              <li>Alumni connections</li>
              <li>Professional mentors</li>
            </ul>
          </div>
          
          <div class="benefit-card card">
            <div class="benefit-icon">üèÜ</div>
            <h3>Compete & Excel</h3>
            <p>Participate in CTF competitions, hackathons, and cybersecurity challenges to test your skills.</p>
            <ul class="benefit-features">
              <li>CTF competitions</li>
              <li>Hackathons</li>
              <li>Security challenges</li>
              <li>Team competitions</li>
            </ul>
          </div>
          
          <div class="benefit-card card">
            <div class="benefit-icon">üî¨</div>
            <h3>Research & Innovate</h3>
            <p>Contribute to cutting-edge cybersecurity research and develop innovative security solutions.</p>
            <ul class="benefit-features">
              <li>Research projects</li>
              <li>Innovation labs</li>
              <li>Publication opportunities</li>
              <li>Patent guidance</li>
            </ul>
          </div>
          
          <div class="benefit-card card">
            <div class="benefit-icon">üíº</div>
            <h3>Career Development</h3>
            <p>Get career guidance, internship opportunities, and job placement assistance in cybersecurity.</p>
            <ul class="benefit-features">
              <li>Career counseling</li>
              <li>Internship programs</li>
              <li>Job placements</li>
              <li>Resume building</li>
            </ul>
          </div>
          
          <div class="benefit-card card">
            <div class="benefit-icon">üåü</div>
            <h3>Recognition & Awards</h3>
            <p>Gain recognition for your contributions and achievements in the cybersecurity field.</p>
            <ul class="benefit-features">
              <li>Achievement awards</li>
              <li>Certificates</li>
              <li>Leadership roles</li>
              <li>Public recognition</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Membership Types -->
    <section class="section membership-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">Membership Options</h2>
          <p class="section-subtitle">
            Choose the membership type that best fits your goals and interests
          </p>
        </div>
        
        <div class="membership-grid">
          <div class="membership-card card">
            <div class="membership-badge">Most Popular</div>
            <h3>Regular Member</h3>
            <div class="membership-price">
              <span class="price">Free</span>
              <span class="period">for BCET students</span>
            </div>
            <ul class="membership-features">
              <li>Access to all workshops</li>
              <li>Participation in events</li>
              <li>Basic mentorship</li>
              <li>Community access</li>
              <li>Newsletter subscription</li>
              <li>Basic resources</li>
            </ul>
            <button class="btn btn-primary membership-btn">Join as Regular Member</button>
          </div>
          
          <div class="membership-card card featured">
            <div class="membership-badge">Recommended</div>
            <h3>Core Member</h3>
            <div class="membership-price">
              <span class="price">‚Çπ500</span>
              <span class="period">per semester</span>
            </div>
            <ul class="membership-features">
              <li>All Regular Member benefits</li>
              <li>Advanced workshops</li>
              <li>Priority event access</li>
              <li>Personal mentorship</li>
              <li>Research opportunities</li>
              <li>Certification support</li>
              <li>Exclusive resources</li>
              <li>Leadership opportunities</li>
            </ul>
            <button class="btn btn-primary membership-btn">Join as Core Member</button>
          </div>
          
          <div class="membership-card card">
            <h3>Alumni Member</h3>
            <div class="membership-price">
              <span class="price">‚Çπ1000</span>
              <span class="period">per year</span>
            </div>
            <ul class="membership-features">
              <li>Alumni network access</li>
              <li>Industry events</li>
              <li>Mentorship opportunities</li>
              <li>Guest speaker sessions</li>
              <li>Professional development</li>
              <li>Networking events</li>
            </ul>
            <button class="btn btn-secondary membership-btn">Join as Alumni</button>
          </div>
        </div>
      </div>
    </section>

    <!-- Application Process -->
    <section class="section process-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">How to Join</h2>
          <p class="section-subtitle">
            Simple steps to become a member of CyberCell BCET
          </p>
        </div>
        
        <div class="process-steps">
          <div class="step-card card">
            <div class="step-number">01</div>
            <h3>Fill Application</h3>
            <p>Complete our online membership application form with your details and interests.</p>
          </div>
          
          <div class="step-arrow">‚Üí</div>
          
          <div class="step-card card">
            <div class="step-number">02</div>
            <h3>Attend Orientation</h3>
            <p>Join our orientation session to learn about our activities and meet the team.</p>
          </div>
          
          <div class="step-arrow">‚Üí</div>
          
          <div class="step-card card">
            <div class="step-number">03</div>
            <h3>Complete Assessment</h3>
            <p>Take a basic cybersecurity knowledge assessment (don't worry, it's beginner-friendly!).</p>
          </div>
          
          <div class="step-arrow">‚Üí</div>
          
          <div class="step-card card">
            <div class="step-number">04</div>
            <h3>Welcome Aboard!</h3>
            <p>Receive your membership confirmation and start your cybersecurity journey with us.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Application Form -->
    <section class="section application-section">
      <div class="container">
        <div class="application-content">
          <div class="application-info">
            <h2>Ready to Join?</h2>
            <p>Fill out the application form and take the first step towards joining our cybersecurity community.</p>
            
            <div class="requirements">
              <h3>Requirements</h3>
              <ul>
                <li>Must be a current BCET student or alumni</li>
                <li>Basic interest in cybersecurity</li>
                <li>Commitment to attend regular meetings</li>
                <li>Willingness to learn and contribute</li>
              </ul>
            </div>
            
            <div class="next-steps">
              <h3>What Happens Next?</h3>
              <ul>
                <li>Application review within 48 hours</li>
                <li>Invitation to orientation session</li>
                <li>Basic assessment (if applicable)</li>
                <li>Membership confirmation</li>
              </ul>
            </div>
          </div>
          
          <div class="application-form card">
            <h3>Membership Application</h3>
            <form class="form" id="applicationForm">
              <div class="form-row">
                <div class="form-group">
                  <label for="firstName">First Name *</label>
                  <input type="text" id="firstName" name="firstName" required>
                </div>
                
                <div class="form-group">
                  <label for="lastName">Last Name *</label>
                  <input type="text" id="lastName" name="lastName" required>
                </div>
              </div>
              
              <div class="form-group">
                <label for="email">Email Address *</label>
                <input type="email" id="email" name="email" required>
              </div>
              
              <div class="form-group">
                <label for="phone">Phone Number *</label>
                <input type="tel" id="phone" name="phone" required>
              </div>
              
              <div class="form-row">
                <div class="form-group">
                  <label for="studentId">Student ID *</label>
                  <input type="text" id="studentId" name="studentId" placeholder="e.g., 20CS001" required>
                </div>
                
                <div class="form-group">
                  <label for="year">Academic Year *</label>
                  <select id="year" name="year" required>
                    <option value="">Select your year</option>
                    <option value="first">First Year</option>
                    <option value="second">Second Year</option>
                    <option value="third">Third Year</option>
                    <option value="final">Final Year</option>
                    <option value="postgrad">Post Graduate</option>
                    <option value="alumni">Alumni</option>
                  </select>
                </div>
              </div>
              
              <div class="form-row">
                <div class="form-group">
                  <label for="department">Department *</label>
                  <select id="department" name="department" required>
                    <option value="">Select department</option>
                    <option value="cse">Computer Science & Engineering</option>
                    <option value="it">Information Technology</option>
                    <option value="ece">Electronics & Communication</option>
                    <option value="eee">Electrical & Electronics</option>
                    <option value="mech">Mechanical Engineering</option>
                    <option value="civil">Civil Engineering</option>
                    <option value="other">Other</option>
                  </select>
                </div>
                
                <div class="form-group">
                  <label for="membershipType">Membership Type *</label>
                  <select id="membershipType" name="membershipType" required>
                    <option value="">Select membership</option>
                    <option value="regular">Regular Member (Free)</option>
                    <option value="core">Core Member (‚Çπ500/semester)</option>
                    <option value="alumni">Alumni Member (‚Çπ1000/year)</option>
                  </select>
                </div>
              </div>
              
              <div class="form-group">
                <label for="interests">Areas of Interest *</label>
                <div class="checkbox-grid">
                  <label class="checkbox-label">
                    <input type="checkbox" name="interests" value="ethical-hacking">
                    <span class="checkmark"></span>
                    Ethical Hacking
                  </label>
                  <label class="checkbox-label">
                    <input type="checkbox" name="interests" value="web-security">
                    <span class="checkmark"></span>
                    Web Security
                  </label>
                  <label class="checkbox-label">
                    <input type="checkbox" name="interests" value="network-security">
                    <span class="checkmark"></span>
                    Network Security
                  </label>
                  <label class="checkbox-label">
                    <input type="checkbox" name="interests" value="malware-analysis">
                    <span class="checkmark"></span>
                    Malware Analysis
                  </label>
                  <label class="checkbox-label">
                    <input type="checkbox" name="interests" value="digital-forensics">
                    <span class="checkmark"></span>
                    Digital Forensics
                  </label>
                  <label class="checkbox-label">
                    <input type="checkbox" name="interests" value="cryptography">
                    <span class="checkmark"></span>
                    Cryptography
                  </label>
                  <label class="checkbox-label">
                    <input type="checkbox" name="interests" value="mobile-security">
                    <span class="checkmark"></span>
                    Mobile Security
                  </label>
                  <label class="checkbox-label">
                    <input type="checkbox" name="interests" value="cloud-security">
                    <span class="checkmark"></span>
                    Cloud Security
                  </label>
                  <label class="checkbox-label">
                    <input type="checkbox" name="interests" value="iot-security">
                    <span class="checkmark"></span>
                    IoT Security
                  </label>
                  <label class="checkbox-label">
                    <input type="checkbox" name="interests" value="ai-security">
                    <span class="checkmark"></span>
                    AI Security
                  </label>
                  <label class="checkbox-label">
                    <input type="checkbox" name="interests" value="ctf">
                    <span class="checkmark"></span>
                    CTF Competitions
                  </label>
                  <label class="checkbox-label">
                    <input type="checkbox" name="interests" value="research">
                    <span class="checkmark"></span>
                    Security Research
                  </label>
                </div>
              </div>
              
              <div class="form-group">
                <label for="experience">Previous Experience</label>
                <select id="experience" name="experience">
                  <option value="">Select your level</option>
                  <option value="beginner">Complete Beginner</option>
                  <option value="basic">Basic Knowledge</option>
                  <option value="intermediate">Intermediate</option>
                  <option value="advanced">Advanced</option>
                  <option value="expert">Expert</option>
                </select>
              </div>
              
              <div class="form-group">
                <label for="motivation">Why do you want to join CyberCell BCET? *</label>
                <textarea id="motivation" name="motivation" rows="4" placeholder="Tell us about your motivation and goals..." required></textarea>
              </div>
              
              <div class="form-group">
                <label for="contribution">How can you contribute to our community?</label>
                <textarea id="contribution" name="contribution" rows="3" placeholder="Share your skills, ideas, or how you'd like to help..."></textarea>
              </div>
              
              <div class="form-group checkbox-group">
                <label class="checkbox-label">
                  <input type="checkbox" id="commitment" name="commitment" required>
                  <span class="checkmark"></span>
                  I commit to actively participate in CyberCell activities and meetings *
                </label>
              </div>
              
              <div class="form-group checkbox-group">
                <label class="checkbox-label">
                  <input type="checkbox" id="newsletter" name="newsletter">
                  <span class="checkmark"></span>
                  Subscribe to our newsletter for updates and announcements
                </label>
              </div>
              
              <div class="form-group checkbox-group">
                <label class="checkbox-label">
                  <input type="checkbox" id="terms" name="terms" required>
                  <span class="checkmark"></span>
                  I agree to the <a href="/terms">Terms of Service</a> and <a href="/privacy">Privacy Policy</a> *
                </label>
              </div>
              
              <button type="submit" class="btn btn-primary form-submit">
                <span class="btn-text">Submit Application</span>
                <span class="btn-loading" style="display: none;">Submitting...</span>
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="section contact-section">
      <div class="container">
        <div class="contact-content">
          <h2>Have Questions?</h2>
          <p>Our team is here to help you with any questions about membership or the application process.</p>
          <div class="contact-actions">
            <a href="/contact" class="btn btn-secondary">Contact Us</a>
            <a href="mailto:cybercell@bcet.ac.in" class="btn btn-ghost">Email Us</a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .hero-section {
    padding: 120px 0 80px;
    background: var(--gradient-bg);
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 50% 50%, rgba(0, 212, 255, 0.1) 0%, transparent 70%);
  }

  .hero-content {
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: var(--space-6);
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto var(--space-12);
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    gap: var(--space-12);
    flex-wrap: wrap;
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--primary);
    line-height: 1;
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--text-muted);
    text-transform: uppercase;
    font-weight: 500;
    letter-spacing: 0.05em;
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-6);
  }

  .benefit-card {
    padding: var(--space-8);
    text-align: center;
    transition: all var(--transition-normal);
  }

  .benefit-card:hover {
    transform: translateY(-8px);
    border-color: var(--primary);
    box-shadow: var(--shadow-xl);
  }

  .benefit-icon {
    font-size: 4rem;
    margin-bottom: var(--space-6);
  }

  .benefit-card h3 {
    font-size: 1.5rem;
    margin-bottom: var(--space-4);
    color: var(--text-primary);
  }

  .benefit-card p {
    margin-bottom: var(--space-6);
    line-height: 1.6;
  }

  .benefit-features {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .benefit-features li {
    color: var(--primary);
    font-size: 0.875rem;
    font-weight: 500;
    position: relative;
    padding-left: var(--space-4);
  }

  .benefit-features li::before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: var(--accent);
    font-weight: bold;
  }

  .membership-section {
    background: var(--bg-secondary);
  }

  .membership-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-8);
  }

  .membership-card {
    padding: var(--space-8);
    text-align: center;
    position: relative;
    transition: all var(--transition-normal);
  }

  .membership-card.featured {
    border: 2px solid var(--primary);
    box-shadow: var(--shadow-glow);
    transform: scale(1.05);
  }

  .membership-card:hover {
    transform: translateY(-4px);
    border-color: var(--primary);
  }

  .membership-card.featured:hover {
    transform: scale(1.05) translateY(-4px);
  }

  .membership-badge {
    position: absolute;
    top: 0;
    right: 0;
    background: var(--gradient-primary);
    color: white;
    padding: var(--space-2) var(--space-4);
    border-bottom-left-radius: var(--radius-xl);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .membership-card h3 {
    font-size: 1.75rem;
    margin-bottom: var(--space-6);
    color: var(--text-primary);
  }

  .membership-price {
    margin-bottom: var(--space-8);
  }

  .price {
    display: block;
    font-size: 3rem;
    font-weight: 800;
    color: var(--primary);
    line-height: 1;
  }

  .period {
    color: var(--text-muted);
    font-size: 0.875rem;
  }

  .membership-features {
    list-style: none;
    margin-bottom: var(--space-8);
    text-align: left;
  }

  .membership-features li {
    padding: var(--space-2) 0;
    border-bottom: 1px solid var(--border-secondary);
    position: relative;
    padding-left: var(--space-6);
  }

  .membership-features li:last-child {
    border-bottom: none;
  }

  .membership-features li::before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: var(--accent);
    font-weight: bold;
  }

  .membership-btn {
    width: 100%;
  }

  .process-section {
    background: var(--bg-tertiary);
  }

  .process-steps {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-4);
    align-items: center;
  }

  .step-card {
    padding: var(--space-6);
    text-align: center;
    transition: all var(--transition-normal);
  }

  .step-card:hover {
    transform: translateY(-4px);
    border-color: var(--primary);
  }

  .step-number {
    width: 60px;
    height: 60px;
    background: var(--gradient-primary);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 auto var(--space-4);
  }

  .step-card h3 {
    font-size: 1.25rem;
    margin-bottom: var(--space-3);
    color: var(--text-primary);
  }

  .step-card p {
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .step-arrow {
    font-size: 2rem;
    color: var(--primary);
    text-align: center;
    font-weight: bold;
  }

  .application-section {
    background: var(--bg-secondary);
  }

  .application-content {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: var(--space-16);
    align-items: start;
  }

  .application-info h2 {
    font-size: 2.5rem;
    margin-bottom: var(--space-4);
    color: var(--text-primary);
  }

  .application-info > p {
    font-size: 1.125rem;
    margin-bottom: var(--space-8);
    color: var(--text-secondary);
  }

  .requirements, .next-steps {
    margin-bottom: var(--space-8);
  }

  .requirements h3, .next-steps h3 {
    font-size: 1.25rem;
    margin-bottom: var(--space-4);
    color: var(--text-primary);
  }

  .requirements ul, .next-steps ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .requirements li, .next-steps li {
    position: relative;
    padding-left: var(--space-4);
    color: var(--text-secondary);
  }

  .requirements li::before, .next-steps li::before {
    content: '‚Ä¢';
    position: absolute;
    left: 0;
    color: var(--primary);
    font-weight: bold;
  }

  .application-form {
    padding: var(--space-8);
  }

  .application-form h3 {
    font-size: 1.75rem;
    margin-bottom: var(--space-6);
    color: var(--text-primary);
    text-align: center;
  }

  .form {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4);
  }

  .form-group {
    display: flex;
