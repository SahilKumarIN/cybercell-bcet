<style>
  .error-page {
    min-height: 100vh;
    padding-top: 80px;
  }

  .error-hero {
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    background: var(--gradient-bg);
  }

  .error-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    align-items: center;
    position: relative;
    z-index: 2;
  }

  .error-visual {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .terminal-window {
    background: var(--bg-secondary);
    border: 1px solid rgba(0, 212, 255, 0.3);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-xl);
    overflow: hidden;
    max-width: 500px;
    width: 100%;
    font-family: var(--font-mono);
  }

  .terminal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-4);
    background: var(--bg-tertiary);
    border-bottom: 1px solid rgba(0, 212, 255, 0.2);
  }

  .terminal-dots {
    display: flex;
    gap: var(--space-2);
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .dot.red {
    background: #ff5f56;
  }
  .dot.yellow {
    background: #ffbd2e;
  }
  .dot.green {
    background: #27ca3f;
  }

  .terminal-title {
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .terminal-body {
    padding: var(--space-6);
    background: var(--bg-primary);
  }

  .terminal-line {
    margin-bottom: var(--space-2);
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .prompt {
    color: var(--accent);
    font-weight: 600;
  }

  .command {
    color: var(--primary);
    margin-left: var(--space-2);
  }

  .output {
    color: var(--text-secondary);
  }

  .output.error {
    color: var(--error);
    font-weight: 600;
  }

  .cursor {
    color: var(--primary);
    animation: blink 1s infinite;
  }

  @keyframes blink {
    0%,
    50% {
      opacity: 1;
    }
    51%,
    100% {
      opacity: 0;
    }
  }

  .floating-icons {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .security-icon {
    position: absolute;
    font-size: 2rem;
    opacity: 0.6;
    animation: float 6s ease-in-out infinite;
  }

  .security-icon.shield {
    top: 10%;
    right: -10%;
    animation-delay: 0s;
  }

  .security-icon.lock {
    top: 60%;
    right: -5%;
    animation-delay: 1s;
  }

  .security-icon.warning {
    bottom: 20%;
    left: -10%;
    animation-delay: 2s;
  }

  .security-icon.search {
    top: 30%;
    left: -15%;
    animation-delay: 3s;
  }

  .security-icon.bug {
    bottom: 40%;
    right: -20%;
    animation-delay: 4s;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0) rotate(0deg);
    }
    25% {
      transform: translateY(-20px) rotate(5deg);
    }
    50% {
      transform: translateY(-10px) rotate(-5deg);
    }
    75% {
      transform: translateY(-15px) rotate(3deg);
    }
  }

  .error-info {
    text-align: center;
  }

  .error-code {
    margin-bottom: var(--space-8);
  }

  .code-number {
    display: block;
    font-size: 8rem;
    font-weight: 900;
    line-height: 1;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--space-2);
  }

  .code-text {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-secondary);
    letter-spacing: 0.2em;
    text-transform: uppercase;
  }

  .error-title {
    font-size: 2.5rem;
    margin-bottom: var(--space-6);
    color: var(--text-primary);
    line-height: 1.2;
  }

  .title-accent {
    display: block;
    color: var(--accent);
    font-size: 2rem;
    margin-top: var(--space-2);
  }

  .error-description {
    font-size: 1.125rem;
    line-height: 1.6;
    margin-bottom: var(--space-8);
    color: var(--text-secondary);
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .error-suggestions {
    margin-bottom: var(--space-10);
    text-align: left;
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
  }

  .error-suggestions h3 {
    font-size: 1.25rem;
    margin-bottom: var(--space-4);
    color: var(--text-primary);
    text-align: center;
  }

  .suggestions-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .suggestions-list li {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    color: var(--text-secondary);
    font-size: 0.95rem;
  }

  .suggestions-list svg {
    color: var(--primary);
    flex-shrink: 0;
  }

  .error-actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  .error-actions .btn {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .bg-effects {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
  }

  .grid-pattern {
    position: absolute;
    inset: 0;
    background-image: linear-gradient(
        rgba(0, 212, 255, 0.1) 1px,
        transparent 1px
      ),
      linear-gradient(90deg, rgba(0, 212, 255, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    animation: grid-move 20s linear infinite;
  }

  @keyframes grid-move {
    0% {
      transform: translate(0, 0);
    }
    100% {
      transform: translate(50px, 50px);
    }
  }

  .scan-lines {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(0, 212, 255, 0.1) 50%,
      transparent 100%
    );
    animation: scan 3s ease-in-out infinite;
  }

  @keyframes scan {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(100vw);
    }
  }

  .quick-nav-section {
    padding: var(--space-20) 0;
    background: var(--bg-secondary);
  }

  .quick-nav-section h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: var(--space-12);
    color: var(--text-primary);
  }

  .quick-nav-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-6);
  }

  .nav-card {
    padding: var(--space-8);
    text-align: center;
    transition: all var(--transition-normal);
    text-decoration: none;
    color: inherit;
  }

  .nav-card:hover {
    transform: translateY(-8px);
    border-color: var(--primary);
    box-shadow: var(--shadow-xl);
    color: inherit;
  }

  .nav-icon {
    font-size: 3rem;
    margin-bottom: var(--space-4);
  }

  .nav-card h3 {
    font-size: 1.25rem;
    margin-bottom: var(--space-3);
    color: var(--text-primary);
  }

  .nav-card p {
    color: var(--text-secondary);
    font-size: 0.95rem;
  }

  @media (max-width: 1024px) {
    .error-content {
      grid-template-columns: 1fr;
      gap: var(--space-12);
      text-align: center;
    }

    .error-visual {
      order: 2;
    }

    .error-info {
      order: 1;
    }
  }

  @media (max-width: 768px) {
    .code-number {
      font-size: 6rem;
    }

    .error-title {
      font-size: 2rem;
    }

    .title-accent {
      font-size: 1.5rem;
    }

    .error-actions {
      flex-direction: column;
      align-items: center;
    }

    .quick-nav-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .floating-icons {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .quick-nav-grid {
      grid-template-columns: 1fr;
    }

    .terminal-window {
      margin: 0 var(--space-4);
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Add some interactive terminal effects
    const terminal = document.querySelector(".terminal-body");

    if (terminal) {
      // Simulate typing effect on load
      const lines = terminal.querySelectorAll(".terminal-line");
      lines.forEach((line, index) => {
        line.style.opacity = "0";
        setTimeout(() => {
          line.style.opacity = "1";
          line.style.animation = "fadeInUp 0.5s ease";
        }, index * 300);
      });
    }

    // Add glitch effect to 404 number occasionally
    const codeNumber = document.querySelector(".code-number");
    if (codeNumber) {
      setInterval(() => {
        if (Math.random() < 0.1) {
          // 10% chance every interval
          codeNumber.style.animation = "glitch 0.3s ease";
          setTimeout(() => {
            codeNumber.style.animation = "";
          }, 300);
        }
      }, 2000);
    }
  });

  // Add CSS for animations
  const style = document.createElement("style");
  style.textContent = `
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes glitch {
      0% { transform: translate(0); }
      20% { transform: translate(-2px, 2px); }
      40% { transform: translate(-2px, -2px); }
      60% { transform: translate(2px, 2px); }
      80% { transform: translate(2px, -2px); }
      100% { transform: translate(0); }
    }
  `;
  document.head.appendChild(style);
</script>
