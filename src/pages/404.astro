---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout
  title="404 - Page Not Found | CyberCell BCET"
  description="The page you're looking for could not be found. Return to CyberCell BCET homepage or explore our cybersecurity resources."
>
  <Header />
  <main class="error-page">
