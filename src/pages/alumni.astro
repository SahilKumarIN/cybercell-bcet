---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import alumni from "../data/alumni.json";
---

<Layout
  title="Our Alumni - CyberCell BCET"
  description="Meet the passionate team members and leadership of CyberCell BCET driving cybersecurity innovation and education."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title">Our Alumni</h1>
          <p class="hero-subtitle">
            Meet the passionate individuals driving CyberCell BCET forward with
            innovation and dedication
          </p>
        </div>
      </div>
    </section>

    <!-- Core Team Members -->
    <section class="section core-team-section">
      <div class="container">
        <div class="section-header">
          <h2 class="section-title">Batch 2025</h2>
        </div>
        <div class="core-team-grid">
          {
            alumni["2025"].map((alumnus) => (
              <div class="member-card mini card">
                <div class="member-avatar mini">
                  <img
                    src="https://images.pexels.com/photos/1181519/pexels-photo-1181519.jpeg?auto=compress&cs=tinysrgb&w=200&h=200&fit=crop"
                    alt="Core Member"
                  />
                </div>
                <div class="member-info">
                  <h5>{alumnus.name}</h5>
                  {alumnus.isLeadRole && (
                    <p class="member-role">{alumnus.leadRole}</p>
                  )}
                  <p class="member-role">{alumnus.department}</p>
                </div>
              </div>
            ))
          }
        </div>

        <br />
        <br />
        <div class="section-header">
          <h2 class="section-title">Batch 2024</h2>
        </div>
        <div class="core-team-grid">
          {
            alumni["2024"].map((alumnus) => (
              <div class="member-card mini card">
                <div class="member-avatar mini">
                  <img
                    src="https://images.pexels.com/photos/1181519/pexels-photo-1181519.jpeg?auto=compress&cs=tinysrgb&w=200&h=200&fit=crop"
                    alt="Core Member"
                  />
                </div>
                <div class="member-info">
                  <h5>{alumnus.name}</h5>
                  {alumnus.isLeadRole && (
                    <p class="member-role">{alumnus.leadRole}</p>
                  )}
                  <p class="member-role">{alumnus.department}</p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .hero-section {
    padding: 120px 0 80px;
    background: var(--gradient-bg);
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(
      circle at 50% 50%,
      rgba(0, 212, 255, 0.1) 0%,
      transparent 70%
    );
  }

  .hero-content {
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: var(--space-6);
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .leadership-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-8);
    margin-bottom: var(--space-16);
  }

  .member-card {
    text-align: center;
    padding: var(--space-8);
    position: relative;
  }

  .member-card.featured {
    border: 2px solid var(--primary);
    box-shadow: var(--shadow-glow);
  }

  .member-card.compact {
    padding: var(--space-6);
  }

  .member-card.mini {
    padding: var(--space-4);
  }

  .member-avatar {
    position: relative;
    width: 150px;
    height: 150px;
    margin: 0 auto var(--space-6);
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid var(--primary);
    box-shadow: var(--shadow-lg);
  }

  .member-avatar.small {
    width: 100px;
    height: 100px;
    margin-bottom: var(--space-4);
  }

  .member-avatar.mini {
    width: 80px;
    height: 80px;
    margin-bottom: var(--space-3);
  }

  .member-avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-normal);
  }

  .member-card:hover .member-avatar img {
    transform: scale(1.1);
  }

  .member-status {
    position: absolute;
    bottom: 8px;
    right: 8px;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 3px solid var(--bg-secondary);
  }

  .member-status.online {
    background: var(--accent);
  }

  .member-status.away {
    background: var(--warning);
  }

  .member-info h3 {
    font-size: 1.5rem;
    margin-bottom: var(--space-2);
    color: var(--text-primary);
  }

  .member-info h4 {
    font-size: 1.25rem;
    margin-bottom: var(--space-2);
    color: var(--text-primary);
  }

  .member-info h5 {
    font-size: 1.125rem;
    margin-bottom: var(--space-1);
    color: var(--text-primary);
  }

  .member-role {
    color: var(--primary);
    font-weight: 600;
    margin-bottom: var(--space-2);
    text-transform: uppercase;
    font-size: 0.875rem;
    letter-spacing: 0.05em;
  }

  .member-department {
    color: var(--text-muted);
    font-size: 0.875rem;
    margin-bottom: var(--space-4);
  }

  .member-bio {
    color: var(--text-secondary);
    margin-bottom: var(--space-4);
    line-height: 1.6;
  }

  .member-skills {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-2);
    margin-bottom: var(--space-6);
  }

  .skill {
    background: rgba(0, 212, 255, 0.1);
    color: var(--primary);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 500;
    border: 1px solid rgba(0, 212, 255, 0.2);
  }

  .member-social {
    display: flex;
    justify-content: center;
    gap: var(--space-3);
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(0, 212, 255, 0.1);
    border: 1px solid rgba(0, 212, 255, 0.2);
    border-radius: var(--radius-lg);
    color: var(--primary);
    transition: all var(--transition-fast);
  }

  .social-link:hover {
    background: var(--primary);
    color: var(--bg-primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .department-section {
    background: var(--bg-secondary);
  }

  .department-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
  }

  .core-team-section {
    background: var(--bg-tertiary);
  }

  .core-team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
  }

  .join-team-section {
    background: var(--gradient-primary);
    color: white;
  }

  .join-team-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .join-team-content h2 {
    font-size: 2.5rem;
    margin-bottom: var(--space-4);
    color: white;
  }

  .join-team-content > p {
    font-size: 1.25rem;
    margin-bottom: var(--space-12);
    color: rgba(255, 255, 255, 0.9);
  }

  .join-benefits {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-8);
    margin-bottom: var(--space-12);
  }

  .benefit-item {
    text-align: center;
  }

  .benefit-icon {
    font-size: 3rem;
    margin-bottom: var(--space-4);
  }

  .benefit-item h4 {
    font-size: 1.25rem;
    margin-bottom: var(--space-3);
    color: white;
  }

  .benefit-item p {
    color: rgba(255, 255, 255, 0.8);
  }

  .join-actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  .join-actions .btn {
    background: white;
    color: var(--primary);
    border: none;
  }

  .join-actions .btn:hover {
    background: rgba(255, 255, 255, 0.9);
    color: var(--primary);
  }

  .join-actions .btn-secondary {
    background: transparent;
    color: white;
    border: 2px solid white;
  }

  .join-actions .btn-secondary:hover {
    background: white;
    color: var(--primary);
  }

  @media (max-width: 768px) {
    .leadership-grid {
      grid-template-columns: 1fr;
    }

    .department-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .core-team-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .join-benefits {
      grid-template-columns: 1fr;
    }

    .join-actions {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 480px) {
    .department-grid,
    .core-team-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
