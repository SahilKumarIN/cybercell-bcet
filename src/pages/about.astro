<style>
  .hero-section {
    padding: 120px 0 80px;
    background: var(--gradient-bg);
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(
      circle at 50% 50%,
      rgba(0, 212, 255, 0.1) 0%,
      transparent 70%
    );
  }

  .hero-content {
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: var(--space-6);
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: clamp(1.125rem, 2vw, 1.5rem);
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto var(--space-12);
  }

  .hero-timeline {
    display: flex;
    justify-content: center;
    gap: var(--space-12);
    flex-wrap: wrap;
  }

  .timeline-item {
    text-align: center;
  }

  .timeline-item .year {
    display: block;
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--primary);
    line-height: 1;
  }

  .timeline-item .milestone {
    font-size: 0.875rem;
    color: var(--text-muted);
    text-transform: uppercase;
    font-weight: 500;
    letter-spacing: 0.05em;
  }

  .origin-section {
    background: var(--bg-secondary);
  }

  .origin-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    align-items: start;
  }

  .story-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .story-paragraph {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--text-secondary);
  }

  .timeline-visual {
    position: relative;
    padding: var(--space-8) 0;
  }

  .timeline-line {
    position: absolute;
    left: 30px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--gradient-primary);
  }

  .timeline-point {
    position: relative;
    padding-left: var(--space-16);
    margin-bottom: var(--space-8);
  }

  .timeline-point::before {
    content: "";
    position: absolute;
    left: 22px;
    top: 8px;
    width: 16px;
    height: 16px;
    background: var(--primary);
    border-radius: 50%;
    border: 3px solid var(--bg-secondary);
  }

  .timeline-point.active::before {
    background: var(--accent);
    box-shadow: 0 0 20px rgba(0, 255, 136, 0.5);
  }

  .point-year {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: var(--space-1);
  }

  .point-event {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--space-1);
  }

  .point-desc {
    font-size: 0.875rem;
    color: var(--text-secondary);
    line-height: 1.5;
  }

  .mission-vision-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-8);
  }

  .mission-card,
  .vision-card {
    padding: var(--space-8);
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }

  .card-icon {
    color: var(--primary);
  }

  .card-header h3 {
    font-size: 1.75rem;
    color: var(--text-primary);
  }

  .mission-statement,
  .vision-statement {
    font-size: 1.125rem;
    line-height: 1.7;
    margin-bottom: var(--space-6);
    color: var(--text-secondary);
  }

  .mission-points {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .point {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
  }

  .point-icon {
    font-size: 1.25rem;
    flex-shrink: 0;
    margin-top: 2px;
  }

  .vision-goals {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-6);
  }

  .goal h4 {
    font-size: 1.125rem;
    color: var(--primary);
    margin-bottom: var(--space-3);
  }

  .goal ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .goal li {
    position: relative;
    padding-left: var(--space-4);
    color: var(--text-secondary);
    font-size: 0.875rem;
  }

  .goal li::before {
    content: "‚Üí";
    position: absolute;
    left: 0;
    color: var(--accent);
    font-weight: bold;
  }

  .differentiators-section {
    background: var(--bg-tertiary);
  }

  .differentiators-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-8);
  }

  .diff-card {
    padding: var(--space-8);
    position: relative;
  }

  .diff-number {
    position: absolute;
    top: var(--space-6);
    right: var(--space-6);
    width: 60px;
    height: 60px;
    background: var(--gradient-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
  }

  .diff-card h3 {
    font-size: 1.5rem;
    margin-bottom: var(--space-4);
    color: var(--text-primary);
  }

  .diff-card p {
    margin-bottom: var(--space-6);
    line-height: 1.6;
  }

  .diff-stats {
    display: flex;
    gap: var(--space-4);
  }

  .diff-stats .stat {
    background: rgba(0, 212, 255, 0.1);
    color: var(--primary);
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 600;
    border: 1px solid rgba(0, 212, 255, 0.2);
  }

  .impact-section {
    background: var(--bg-secondary);
  }

  .impact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
