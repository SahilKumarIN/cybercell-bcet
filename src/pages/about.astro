    <!-- Hero Section -->
    <section class="hero-section">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title">Our Story</h1>
          <p class="hero-subtitle">
            From a small group of cybersecurity enthusiasts to a thriving
            community of digital defenders
          </p>
          <div class="hero-timeline">
            <div class="timeline-item">
              <span class="year">2021</span>
              <span class="milestone">Founded</span>
            </div>
            <div class="timeline-item">
              <span class="year">50+</span>
              <span class="milestone">Members</span>
            </div>
            <div class="timeline-item">
              <span class="year">70+</span>
              <span class="milestone">Events</span>
            </div>
          </div>
        </div>
      </div>
